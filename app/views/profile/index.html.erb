<script src="//maps.google.com/maps/api/js?v=3.23&key=<%= ENV["GOOGLE_MAPS_API_KEY"] %>"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<h1>Profile for <%= @user.name %></h1>
<% if current_user == @user %>
  <%= link_to 'Edit Profile', edit_user_registration_path %>
<% end %>
<div>
  Name: <%= @user.name %><br>
  <% unless @user.garden_website == "" %>
    Garden Website: <%= link_to @user.garden_website%><br>
  <% end %>
  <% unless @user.blurb == "" %>
    About Me: <%= @user.blurb %><br>
  <% end %>
  <% unless @user.g_street == "" %>
    Garden Address:<br>
    <% unless @user.g_street == "" %>
      <%= @user.g_street %><br>
    <% end %>
    <% unless @user.g_street2 == "" %>
      <%= @user.g_street2 %><br>
    <% end %>
    <% unless @user.g_postcode == "" %><%= @user.g_postcode %><% end %><% unless @user.g_city == "" %>, <%= @user.g_city %><% end %><% unless @user.g_country == "" %>, <%= @user.g_country %><% end %>
  <% end %>
</div>
<div>
  <% if @user.pro %>
    <p> <%= @user.name %> is a pro member</p>
  <% else %>
    <p>  <%= @user.name %> has not signed up for pro membership</p>
  <% end %>
</div>
<% if @user.latitude != nil %>
  <div>
    <div id="map" style='width: 400px; height: 400px;'>
    </div>
  </div>
<% end %>

<div>
  <% if @user.articles != nil %>
    <% @user.articles.each do |article| %>
      <h3 class="content-head is-center"><%= article.title %></h3>
      <p class="is-center"><%= article.body.truncate_words(100) %>
        <% if article.body.split.size > 100 %><%= link_to 'Read more', article %><% end %>
      </p>
      <% end %>
  <% end %>
</div>
<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers([
    {
      "lat": <%= @user.latitude %>,
      "lng": <%= @user.longitude %>,
      "picture": {
        "width":  32,
        "height": 32
      },
      "infowindow": "hello!"
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(14);
  });
</script>
