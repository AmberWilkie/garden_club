<% @user = User.find_by_id(params[:user_id])%>
<h1>Profile for <%= @user.name %></h1>
<%= link_to 'Edit Profile', edit_user_registration_path %>
<div>
  Name: <%= @user.name %><br>
  Garden Website: <%= link_to @user.garden_website%><br>
  About Me: <%= @user.blurb %><br>
  Garden Address:<br>
  <%= @user.g_street %><br>
  <%= @user.g_street2 %><br>
  <%= @user.g_postcode %>, <%= @user.g_city %>, <%= @user.g_country %>

</div>
